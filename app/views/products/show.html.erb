<h2>
    <%= @product.name %>
    <small><small><small>Part Number: <%= @product.part_number %></small></small></small>
</h2>

<div class="chip">
    <strong>Purchase Price:</strong> <%= @product.purchase_price %>
</div>

<div class="chip">
    <strong>Sales Price:</strong> <%= @product.sale_price %>
</div>

<div class="chip">
    <strong>Quantity:</strong> <%= @product.qty %>
</div>

<p class="flow-text"><%= @product.description %></p>
<hr />
<div class="right">
    <%= link_to "Edit", edit_product_path(@product), :class => "btn waves-effect waves-light" %>
</div>
<div class="left">
    <%= link_to "Add to Cart", edit_product_path(@product), :class => "btn waves-effect waves-light blue" %>
</div>