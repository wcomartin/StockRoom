<div class="row">
  <div class="col s9">
    <h1>Products</h1>
  </div>
  <div class="col s3">
    <%= link_to "<i class='large material-icons'>add</i>".html_safe, new_product_path,
                :class => "btn-floating btn-large red",
                :style => "margin-top: 3.4em; float:right;" %>
  </div>
</div>

<%= form_with(url: products_path, method: "get") do %>
  <div class="row" style="margin: 0">
    <div class="input-field col s6" style="margin: 0">
      <i class="material-icons prefix">search</i>
      <%= text_field_tag(:q, "", :placeholder => "Search") %>
    </div>
    <div class="input-field col s6" style="margin: 0">
      <%= submit_tag "Search", :class => "btn" %>
    </div>
  </div>
<% end %>

<div class="row card-container">
    <% @products.each do |product| %>
        <div class="card-panel" style="cursor: pointer" onclick="location.href='<%= product_path(product) %>';">
                <div class="card-content">
                    <h3 class="card-title"><%= product.name %></h3>
                    <p class="card-text block-with-text"><%= product.description %></p>
                </div>
        </div>
    <% end %>
</div>