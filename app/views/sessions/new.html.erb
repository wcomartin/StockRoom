<h1>Login</h1>
<%= form_tag '/login' do %>
    <div class="input-field">
        <%= label_tag :username %>
        <%= text_field_tag :username %>
    </div>

    <div class="input-field">
        <%= label_tag :password %>
        <%= password_field_tag :password %>
    </div>

    <p>
        <%= submit_tag("Login", {:class => "btn waves-effect waves-light"}) %>
        <%= link_to "Sign Up", new_user_path, :class => "btn waves-effect waves-light" %>
    </p>
<%end%>